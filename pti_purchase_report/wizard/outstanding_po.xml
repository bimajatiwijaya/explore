<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="outstanding_po_view" model="ir.ui.view">
        <field name="name">Outstanding purchase order</field>
        <field name="model">outstanding.purchase.information</field>
        <field name="arch" type="xml">
            <form string="Report Options">                               
               <field invisible="1" name="state_x"/>                 
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Generate to Excel is done. Download by click link below." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>				
                <footer attrs="{'invisible':[('state_x','!=','choose')]}">
                    <button name="outstanding_po_report" string="Generate" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
                
            </form>
        </field>
    </record>

    <record id="action_outstanding_po" model="ir.actions.act_window">
        <field name="name">Outstanding purchase order</field>
        <field name="res_model">outstanding.purchase.information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="outstanding_po_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
       
    </record>

    
</odoo>
